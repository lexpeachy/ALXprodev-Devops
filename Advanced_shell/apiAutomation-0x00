#!/bin/bash

# Define the API URL for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request and handle the response
response=$(curl -s -w "%{http_code}" "$API_URL")

# Extract the HTTP status code and the response body
http_code=${response: -3}
body=${response%???}

# Check if the request was successful (HTTP status code 200)
if [ "$http_code" -eq 200 ]; then
    # Save the response to data.json
    echo "$body" > data.json
    echo "Data successfully saved to data.json"
else
    # Log the error to errors.txt
    error_message="Error: Request failed with status code $http_code"
    echo "$error_message" >> errors.txt
    echo "$error_message" >&2
    exit 1
fi
